<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolbarTitleViewSample.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">LightSkyBlue</Color>
            <Color x:Key="SecondaryColor">DarkBlue</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{x:DynamicResource PrimaryColor}" />
                <Setter Property="BarTextColor" Value="{x:DynamicResource SecondaryColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
